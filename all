const partsDB = [
  {
    brand: "Specialized",
    name: "Carbon Handlebar",
    desc: "Lightweight performance upgrade.",
    img: "https://images.unsplash.com/photo-1574180045827-681f8a1a9622?auto=format&fit=crop&w=800&q=80"
  },
  {
    brand: "Santa Cruz",
    name: "Suspension Fork",
    desc: "Perfect for downhill adventures.",
    img: "https://images.unsplash.com/photo-1558980394-0c623066013b?auto=format&fit=crop&w=800&q=80"
  },
  {
    brand: "Mongoose",
    name: "Alloy Crankset",
    desc: "Durable and reliable drivetrain upgrade.",
    img: "https://images.unsplash.com/photo-1525104698733-6f3b67e6313e?auto=format&fit=crop&w=800&q=80"
  },
  {
    brand: "Specialized",
    name: "Power Saddle",
    desc: "Comfort meets aerodynamics.",
    img: "https://images.unsplash.com/photo-1629323571381-4b7853a9b13f?auto=format&fit=crop&w=800&q=80"
  }
];

// --- DOM References ---
const partsContainer = document.querySelector(".parts");
const searchInput = document.querySelector("#search-input");
const brandFilter = document.querySelector("#brand-filter");
const darkToggle = document.querySelector("#dark-toggle");

// --- Load Products ---
function loadParts(data) {
  if (!partsContainer) return;
  partsContainer.innerHTML = "";
  data.forEach(part => {
    const el = document.createElement("div");
    el.className = "part";
    el.innerHTML = `
      <img src="${part.img}" alt="${part.name}">
      <div class="part-info">
        <h3>${part.brand} ${part.name}</h3>
        <p>${part.desc}</p>
      </div>`;
    partsContainer.appendChild(el);
  });
}

// --- Search + Filter ---
function filterParts() {
  const query = searchInput?.value?.toLowerCase() || "";
  const brand = brandFilter?.value || "all";
  const filtered = partsDB.filter(part =>
    (brand === "all" || part.brand === brand) &&
    (part.name.toLowerCase().includes(query) || part.desc.toLowerCase().includes(query))
  );
  loadParts(filtered);
}

// --- Dark Mode ---
function toggleDarkMode() {
  document.body.classList.toggle("dark");
  localStorage.setItem("darkMode", document.body.classList.contains("dark"));
}

// --- Load saved dark mode ---
if (localStorage.getItem("darkMode") === "true") {
  document.body.classList.add("dark");
}

// --- Event Listeners ---
if (searchInput) searchInput.addEventListener("input", filterParts);
if (brandFilter) brandFilter.addEventListener("change", filterParts);
if (darkToggle) darkToggle.addEventListener("click", toggleDarkMode);

// --- Initialize ---
loadParts(partsDB);<!DOCTYPE html>
